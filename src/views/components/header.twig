<header class="header">
	<div class="container">
		<div class="header__overview">
			<a href="./index.html"><img src="./assets/images/logo-white.svg" alt="Say Yes" class="logo"></a>
			<button class="btn btn--transparent btn--uppercase btn--sm">Бесплатный урок</button>
			<a href="#" class="header__link">Онлайн тест</a>
			<a href="#" class="header__link">Обратный звонок</a>
			{% include '../components/phone-numbers.twig' with {classes: 'icon--white icon--sm'}  %}
			<div class="header__contacts">
				<div class="header__city">Москва</div>
				<div class="header__time">ПН-ПТ с 12:00 до 21:00</div>
			</div>
			<a href="#" class="header__link">Войти</a>
		</div>

		<nav class="header__navigation">
			<ul class="header__list">
				{% for item in headerNavItems %}
					<li class="header__item">
						<a href="{{item.url}}" class="header__sublink">{{item.text}}</a>
						{% include '../components/subnav.twig' %}
					</li>
				{% endfor %}
			</ul>
		</nav>
	</div>
</header>
